# Environment Variables

# Database
DATABASE_URL=mysql://user:password@localhost:3306/phoenix_intel

# JWT Session Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Authentication Mode
# Options: "manus" | "local"
# - manus: Use Manus AI OAuth server (production)
# - local: Use email/password authentication (development)
# Defaults to "local" in development, "manus" in production
AUTH_MODE=local

# Manus OAuth Configuration (required if AUTH_MODE=manus)
OAUTH_SERVER_URL=https://api.manus.app
VITE_OAUTH_PORTAL_URL=https://portal.manus.app
VITE_APP_ID=your-manus-app-id

# Owner Configuration
OWNER_OPEN_ID=your-manus-open-id

# Optional: Built-in Forge API (Manus AI Proxy for Google Maps)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Google Maps API Configuration
# You can use EITHER direct Google Maps API OR Manus Forge proxy, not both
# Option 1: Direct Google Maps API (recommended for most users)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
# Get your key at: https://console.cloud.google.com/
# Enable these APIs: Places API, Geocoding API, Maps JavaScript API

# Option 2: Manus Forge Proxy (if you have Manus credentials)
# BUILT_IN_FORGE_API_URL=https://forge.manus.app
# BUILT_IN_FORGE_API_KEY=your-manus-forge-key

# If neither is set, the app will use mock data for development

# Client-side variables (must start with VITE_)
VITE_AUTH_MODE=local
VITE_APP_ID=your-manus-app-id
VITE_OAUTH_PORTAL_URL=https://portal.manus.app

# Performance & Logging Configuration
NODE_ENV=production
LOG_LEVEL=warn
# Options: debug, info, warn, error
# Production default: warn (only warnings and errors)
# Development default: debug (all logs)

# Server Configuration
PORT=3000
